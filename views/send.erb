<form action="" method="post">
  <label for="picture_from">From:
    <input type="text" name="picture[from]" placeholder="Name/email/twitter..." />
  </label>
  <br/>
  <label for="picture_image_data">Picture:
    <div id="controls">
      <ul id="tools">
        <li>
          <a id="pencil"><img src="/pencil.gif" width="16px"/></a>
        </li>
        <li>
          <a id="eraser"><img src="/eraser.gif" width="16px"/></a>
        </li>
      </ul>
      <ul id="widths">
        <li>
          <a id="small">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="16px" height="16px">
              <circle cx="8" cy="8" r="2" stroke="black" stroke-width="1" fill="black" />
          </a>
        </li>
        <li>
          <a id="medium">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="16px" height="16px">
              <circle cx="8" cy="8" r="4" stroke="black" stroke-width="1" fill="black" />
          </a>
        </li>
        <li>
          <a id="large">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="16px" height="16px">
              <circle cx="8" cy="8" r="6" stroke="black" stroke-width="1" fill="black" />
          </a>
        </li>
      </ul>
    </div>
    <div id="container">
      <canvas id="imageView" width="384" height="384">
        <p>Unfortunately, your browser is currently unsupported by our web
          application.  We are sorry for the inconvenience. Please use one of the
          supported browsers listed below, or draw the image you want using an
          offline tool.</p>
        <p>Supported browsers:
          <a href="http://www.opera.com">Opera</a>,
          <a href="http://www.mozilla.com">Firefox</a>,
          <a href="http://www.apple.com/safari">Safari</a>,
          and <a href="http://www.konqueror.org">Konqueror</a>.
        </p>
      </canvas>
    </div>
    <input type="hidden" id="picture_image_data" name="picture[image_data]" />
  </label>
  <input id="sendPicture" type="submit" value="Send" />
</form>

<script src="/paint.js" type="text/javascript" charset="utf-8"></script>
<script>
$(function() {
  $("#sendPicture").click(function() {
    $("#picture_image_data").val($("#imageView")[0].toDataURL());
  })
})
</script>
